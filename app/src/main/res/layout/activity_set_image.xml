<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setImageActivity">

    <LinearLayout
        android:paddingTop="112dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/contract_stroke">

<!--상호명 name!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:text="    상호명    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_tv_name"
            android:layout_marginStart="32dp"
            android:background="@color/purple_700"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/add_edittext_name"
            android:backgroundTint="@color/purple_200"/>
    </LinearLayout>

<!--사업자명 cpName!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="  사업자명  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_tv_cpName"
                android:layout_marginStart="32dp"
                android:background="@color/purple_700"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/add_edittext_cpName"
                android:backgroundTint="@color/purple_200"/>
        </LinearLayout>

<!--근로자명 enName!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="  근로자명  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_tv_enName"
                android:layout_marginStart="32dp"
                android:background="@color/purple_700"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/add_edittext_enName"
                android:backgroundTint="@color/purple_200"/>
        </LinearLayout>

<!--회사번호 number!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="  회사번호  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_tv_number"
            android:layout_marginStart="32dp"
            android:background="@color/purple_700"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/add_edittext_number"
            android:backgroundTint="@color/purple_200"/>
    </LinearLayout>

<!--회사주소 address!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="  회사주소  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_tv_address"
            android:layout_marginStart="32dp"
            android:background="@color/purple_700"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/add_edittext_address"
            android:backgroundTint="@color/purple_200"/>
    </LinearLayout>

        <!--근로개시일 start!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="근로개시일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_tv_start"
                android:layout_marginStart="32dp"
                android:background="@color/purple_700"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/add_edittext_start"
                android:backgroundTint="@color/purple_200"/>
        </LinearLayout>

<!--급여 salary!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="     급여     "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_tv_salary"
                android:layout_marginStart="32dp"
                android:background="@color/purple_700"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/add_edittext_salary"
                android:backgroundTint="@color/purple_200"/>
        </LinearLayout>

<!--근로시간 hours!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="  근로시간  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_tv_hours"
                android:layout_marginStart="32dp"
                android:background="@color/purple_700"
                android:textColor="@color/white"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/add_edittext_hours"
                android:backgroundTint="@color/purple_200"/>
        </LinearLayout>

<!--근무요일 days!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:text="  근무요일  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_tv_days"
                android:layout_marginStart="32dp"
                android:background="@color/purple_700"
                android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <CheckBox
                android:layout_marginLeft="3dp"
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="69dp"        android:checked="false"
                android:text="월" android:buttonTint="#E91E63"
                />
            <CheckBox
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="69dp"        android:checked="false"
                android:text="화" android:buttonTint="#E91E63"
                />
            <CheckBox
                android:id="@+id/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="69dp"        android:checked="false"
                android:text="수" android:buttonTint="#E91E63"
                />
            <CheckBox
                android:id="@+id/thursday"
                android:layout_width="wrap_content"
                android:layout_height="69dp" android:buttonTint="#E91E63"        android:checked="false"
                android:text="목"
                />
            <CheckBox
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="69dp"        android:checked="false"
                android:text="금" android:buttonTint="#E91E63"
                />
            <CheckBox
                android:id="@+id/saturday"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:text="토"
                android:buttonTint="#E91E63"
                />
            <CheckBox
                android:id="@+id/sunday"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:text="일"
                android:checked="false"
                android:buttonTint="#E91E63"
                />

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_resource"
        android:text="@string/button_check"
        android:layout_margin="@dimen/big_padding"
        android:textColor="@color/buttonLabel"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_resource"
        android:text="@string/button_save"
        android:layout_margin="@dimen/big_padding"
        android:textColor="@color/buttonLabel"/>
</LinearLayout>